<p id="notice"><%= notice %></p>
<h1>Refeição</h1>
<div style="font-size: 18px;">
	<p>
		<b>Nome:</b>
		<%= @meal.name %>
	</p>

	<p>
		<b>Preço:</b>
		<%= @meal.cost %>
	</p>
</div>
<%= link_to 'Editar', edit_meal_path(@meal), :class => "btn btn-primary" %>
<%= link_to 'Remover', @meal, :confirm => 'Tem certeza?', :method => :delete, :class => "btn btn-danger" %>
<%= link_to 'Voltar', meals_path, :class => "btn btn-default" %>