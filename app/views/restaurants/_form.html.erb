<%= form_for(@restaurant) do |f| %>
	<% if @restaurant.errors.any? %>
	<div id="explicacao_erro">
		<h2>Devido a estes <%= pluralize(@restaurant.errors.count, "error") %> 
			este novo restaurante n√£o pode ser salvo:</h2>
		
		<ul>
			<% @restaurant.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
	<% end %>
	
	<div class="campo_form">
		<%= f.label :campusunit %><br />
		<% @campusunits.each_with_index do |r, i| %>
			<%= f.radio_button(:campusunit_id, r.id, :checked => (i == 0 or r.id == @restaurant.campusunit_id)? true:false ) %>
			<%= r.name %><br /> 
		<% end %>
	</div>
	<div class="campo_form">
		<%= f.label :name %><br />
		<%= f.text_field :name %>
	</div>
	<div class="campo_form">
		<%= f.label :address %><br />
		<%= f.text_field :address %>
	</div>
	<div class="campo_form">
		<%= f.label :tel %><br />
		<%= f.text_field :tel %>
	</div>
	<div class="botao_enviar">
		<%= f.submit %>
	</div>
<% end %> 
